<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="CustomPaymentTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="buttonLabel">@string/confirm_payment</item>
        <item name="activityTitle">Make payment</item>
    </style>

    <style name="list_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="list_button_primary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">@dimen/text_size_primary</item>
    </style>

    <style name="list_button_secondary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#767676</item>
        <item name="android:textSize">@dimen/text_size_secondary</item>
    </style>
</resources>